<%- include('partials/_top') %>
<main class="min-h-screen bg-base-100 w-full py-6 px-10">
    <div class="prose pb-4">
        <h1 class="uppercase"><%= title %></h1>
    </div>
    <form action="" method="post" class="form-control">
        <label class="label uppercase" for="name">Name:</label>
        <input class="input input-bordered input-sm" type="text" id="name" name="name" required /> 

        <label class="label uppercase" for="supervisor">Supervisor:</label>
        <input class="input input-bordered input-sm" type="text" id="supervisor" name="supervisor"
            required> 

        <label class="label uppercase" for="extension">Extension:</label>
        <input class="input input-bordered input-sm mb-4" type="number" name="extension" id="extension" 
            min="0" step="1" required>

        <button type="submit" class="btn btn-primary uppercase">Submit</button>
    </form>
</main>
<%- include('partials/_bottom') %>
