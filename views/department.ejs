<%- include('partials/_top') %>
<main class="min-h-screen bg-base-100 w-full py-6 px-10 uppercase">
    <div class="prose pb-4 mb-4">
        <h1><%= title %></h1>
        <h2>Supervisor: <%= dept.supervisor %></h2>
        <h2>Extension: <%= dept.extension %></h2>
    </div>
    <table class="table table-zebra table-compact mb-4">
        <caption class="text-2xl font-bold">Items:</caption>
        <thead>
            <tr>
                <th>Name</th>
                <th>Brand</th>
                <th>Details</th>
                <th>$/u</th>
                <th>$/lb</th>
                <th>units</th>
                <th>lbs Stocked</th>
            </tr>
        </thead>
        <tbody>
            <% items.map(item => { 
                const {name, details = '--', pricePerUnit = '--', pricePerPound = '--', 
                brand = '--', stockUnits = '--', stockPounds = '--' } = item; %>
            <tr>
                <td><%= name  %></td>
                <td><%= brand %></td>
                <td><%= details %></td>
                <td><%= pricePerUnit %></td>
                <td><%= pricePerPound %></td>
                <td><%= stockUnits %></td>
                <td><%= stockPounds %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="btn-group">
        <a href="/departments/<%= dept.id %>/delete">
            <button class="btn btn-primary">Delete Department</button>
        </a>
        <a href="/departments/<%= dept.id %>/update">
            <button class="btn btn-secondary">Update Department</button>
        </a>
    </div>
</main>
<%- include('partials/_bottom') %>
